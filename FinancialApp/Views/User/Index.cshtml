@*
*@

@{
    ViewData["Title"] = "Users Page";
}
@model ICollection<FinancialApp.Areas.Identity.Data.ApplicationUser>


<div class="text-center">
    <h1 class="display-4">Users</h1>
    @if (@Model != null && @Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Email</th>
                    <th scope="col">Edit/Delete</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary border">Edit</a>
                    
                        </td>

                        <td>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger border">Delete</button>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="text-center">

</div>
